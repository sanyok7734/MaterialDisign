<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="88dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent" >

            <com.balysv.materialripple.MaterialRippleLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rippleOverlay="false"
                    app:rippleColor="#585858"
                    app:rippleAlpha="0.2"
                    app:rippleHover="true">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:id="@+id/itemList">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/textTitleList"
                              android:text="Стрела"
                              android:textColor="#000"
                              android:layout_marginTop="16dp"
                              android:layout_marginRight="56dp"
                              android:layout_marginLeft="72dp"
                              android:fontFamily="sans-serif"
                              android:textSize="16sp"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/textSecondList"
                              android:text="После кораблекрушения плейбой миллиардер Оливер Куин пропадает и считается погибшим в течение пяти лет"
                              android:textColor="#000"
                              android:alpha="0.54"
                              android:layout_marginRight="56dp"
                              android:layout_marginLeft="72dp"
                              android:layout_marginBottom="16dp"
                              android:fontFamily="sans-serif"
                              android:textSize="14sp"
                              android:ellipsize="end"
                              android:maxLines="2"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageTitleList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/arrow"
                    app:border_width="1dp"
                    app:border_color="#ffdddddd"/>

            <ImageView android:id="@+id/imageAddFavList"
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_gravity="right"
                       android:layout_marginTop="16dp"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/add_fav"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="-1dp"
                    android:alpha="0.15"
                    android:layout_gravity="bottom"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
